<%-include('include/_header')%>
            <main>






                <div class="container" style="width:100%">
                    <section>

                        <div class="text-center mt-4">
                            <h1>Product Management</h1>
                        </div>
                        <div class="add d-flex justify-content-end ">
                            <a class="addproduct " href='/admin/addProductPage'>
                                <button type="button" class="btn btn-primary d-flex justify-content-end">Add New
                                    Product</button>
                            </a>
                        </div>
                    </section>
                    <section class="mt-2 ">
                        <table id="example" class="table mt-5 table table-hover table-light text-start align-middle table-bordered" >
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Image</th>
                                    <th width="100px">Description</th>
                                    <th >Category</th>

                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% details.forEach(function(product){ %>
                                    <tr>
                                        <td>
                                            <%=product.name%>
                                        </td>
                                        <td><img src="/products/<%=product.image[0].filename%>" alt="" width="200px"></td>
                                        <td>
                                            <%=product.description%>
                                        </td>
                                        <td>
                                            <%=product.category%>
                                        </td>
                                        <td>
                                            <%=product.price%>
                                        </td>
                                        <td>
                                            <%=product.quantity%>
                                        </td>
                                        <td>
                                            <a class="addproduct " href="/admin/editProduct?id=<%=product._id%>"
                                                style="text-decoration: none;">
                                                <button type="button" class="btn-sm btn-primary "
                                                    style="width: 90px; height: auto; text-decoration: none;">Edit</button>
                                                <% if(product.status==true) {%>
                                            </a>


                                            <a class="addproduct " href="/admin/statusProduct?id=<%= product._id%>"
                                                style="text-decoration: none;">
                                                <button type="button" class="btn-sm btn-danger "onclick="confirm ()"
                                                    style="width: 90px; height: auto; text-decoration: none;">Unlist</button>
                                            </a>
                                            <%}else{%>
                                                <a class="addproduct mt-2"
                                                    href="/admin/statusProduct?id=<%= product._id%>"
                                                    style="text-decoration: none">
                                                    <button type="button" class="btn-sm btn-success"onclick="return confirm('Are you sure you want to List ')"
                                                        style="width: 90px; height: auto; text-decoration: none;">List</button>


                                                </a>
                                                <%}%>

                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </section>
                </div>
        
        </main>


        <footer class="py-4 bg-light mt-auto">
            <div class="container-fluid px-4">
                <div class="d-flex align-items-center justify-content-between small">
                    <div class="text-muted">Copyright &copy; Your Website 2022</div>
                    <div>
                        <a href="#">Privacy Policy</a>
                        &middot;
                        <a href="#">Terms &amp; Conditions</a>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    </div>







   <script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
