            <div class="container" style="width:80%">
                <section>

                    <div class="text-center mt-4 ">
                        <h1>Banner Management</h1>
                    </div>
                    <div class="add d-flex justify-content-end">
                        <a class="addproduct " href='/admin/addBanner'>
                            <button type="button" class="btn btn-primary d-flex justify-content-end">Add New
                                Banner</button>
                        </a>
                    </div>
                </section>
                <section class="mt-2  " >
                    <table id="example" class="table mt-5 table table-hover table-light text-start align-middle table-bordered">
                        <thead>
                            <tr>
                                <th class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">Name</th>
                                <th class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">Title</th>
                                <th class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">Image</th>
                                <th class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% details.forEach(function(banner){ %>
                                <tr>
                                    <td class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
                                        <%=banner.name%>
                                    </td>
                                    <td class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
                                        <%=banner.title%>
                                    </td>
                                    <td class="col-3 col-md-3 col-lg-3 col-xl-1 text-center"><img src="/databaseimg/<%=banner.image%>" alt="" width="200px"></td>
                                    <td class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">


                                        <a class="col-3 col-md-3 col-lg-3 col-xl-1 text-center"  href='/admin/editBannerForm?id=<%= banner._id%>'
                                            style="text-decoration: none; ">
                                            <button type="button" class="btn btn-primary "
                                                style="width: 90px; text-decoration: none;">Edit</button>
                                        </a>

                                        <% if(banner.status==true) {%>
                                            <a class="col-3 col-md-3 col-lg-3 col-xl-1 text-center" href='/admin/updateBanner?id=<%= banner._id%>'
                                                style="text-decoration: none; ">
                                                <button type="button" class="btn btn-primary "
                                                    onclick="return confirm('Are you sure you want to unlist ')"
                                                    style="width: 90px; ">Unlist</button>
                                            </a>

                                            <%}else{%>
                                                <a class="addproduct "
                                                    href='/admin/updateBanner?id=<%= banner._id%>'
                                                    style="text-decoration: none; ">
                                                    <button type="button" class="btn btn-success "
                                                    onclick="return confirm('Are you sure you want to List ')"  style="width: 90px; ">List</button>
                                                </a>

                                                <%}%>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </section>
            </div>
      

<!-- template start -->


                    
