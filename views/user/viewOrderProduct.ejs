<%-include('include/_header')%>

    <!-- Header part end-->


  <section class="breadcrumb breadcrumb_bg">
    <div class="container">
      <div class="row justify-content-start">
        <div class="col-lg-8">
          <div class="breadcrumb_iner">
            <div class="breadcrumb_iner_item">
              <h2>Your Product</h2>

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>



  <div class="container emp-profile ">
    <form method="post">
      <div class="row">

        <div class="col-md-6">
          <div class="profile-head">

          </div>
        </div>

      </div>
      <div class="row">

        <div class="col-md-3">
          <div class="profile-work">

            <a href="/userProfile">Details</a><br /><br />
            <a href="/address">Address</a><br /><br />
            <a href="/orders">Orders</a><br /><br />



          </div>
        </div>
        <div class="col-md-9">
          <div class="tab-content profile-tab" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

              <section class="h-100 gradient-custom">
                <div class="container ">
                  <div>
                    <h6 class="mb-0">
                      <a href="/orders" class="text-body text-decoration-none"><i
                          class="fas fa-long-arrow-alt-left me-2"></i>Back to orders</a>
                    </h6>
                  </div>
                  <div class="">
                    <div class="">
                      <div class="card mt-3" style="border-radius: 10px">
                        <div class="card-header px-4 py-5">
                          <h4 class="text-muted mb-0">
                            Product Details
                            <span style="color: #a8729a"> </span>
                          </h4>
                        </div>
                        <div class="card-body p-4">
                          <div class="card shadow-0 border mb-4">
                            <div class="card-body">
                              <% productData.forEach((order)=>{ %>
                                <div class="row">
                                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">

                                    <img src="/products/<%=order.productDetail.image[0].filename%>" alt="" width="200px"
                                      class="img-fluid" alt="Phone" />
                                  </div>
                                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                    <h8 class="text-muted mb-0">
                                      <%= order.productDetail.name %>
                                    </h8>
                                  </div>
                                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                    <h8 class="text-muted mb-0 small">
                                      <%= order.productDetail.category %>
                                    </h8>
                                  </div>
                                  <!-- <div
                                                  class="col-md-2 text-center d-flex justify-content-center align-items-center"
                                                >
                                                  <p class="text-muted mb-0 small">
                                                    <%= order.productDetail.description %>
                                                  </p>
                                                </div> -->
                                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                    <p class="text-muted mb-0 small">
                                      <%= order.productQuantity %>
                                    </p>
                                  </div>
                                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                    <p class="text-muted mb-0 small">
                                      <%= order.productDetail.price %>
                                    </p>
                                  </div>
                                </div>
                                <% }) %>
                                  <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1" />
                                  <div class="d-flex justify-content-between pt-2">
                                    <p class="fw-bold mb-0">Order Details</p>
                                    <h8 class="text-muted mb-0">
                                      <span class="fw-bold me-4">Delivery Charges :</span> Free
                                    </h8>
                                  </div>

                                  <div class="d-flex justify-content-between pt-2">
                                    <h8 class="text-muted mb-0">Invoice Number : 788152</h8>
                                    <% if(productData[0].discount){ %>
                                      <h8 class="text-muted mb-0"><br/>
                                        <span class="fw-bold me-4">Discount :</span>Rs. <%= productData[0].discount %>
                                      </h8>
                                      <h8 class="text-muted mb-0">
                                        <span class="fw-bold me-4">GST  :  </span>18.00 %
                                      </h8>
                                      <% }else{ %>
                                        <h8 class="text-muted mb-0">
                                          <span class="fw-bold me-4">Discount</span> --
                                        </h8>
                                        <% } %>
                                  </div>
                                  <div class="d-flex justify-content-between mb-5">
                                    <p class="text-muted mb-0">
                                      Address :

                                      <br />
                                      
                                      <%=address[0].address%>
                                        <%=address[0].state %> <br />
                                        <%=address[0].city %> <br />
                                        <%=address[0].district %> <br />
                                        <%=address[0].pincode %> <br />


                                    </p>
                                    <p class="text-muted mb-0">
                                      <span class="fw-bold me-4">Total</span>Rs. <%= productData[0].totalAmount %>
                                    </p>
                                  </div>
                                  <div class="row d-flex align-items-center">
                                    <div class="col-md-2">
                                      <p class="text-muted mb-0 small">Track Order</p>
                                    </div>
                                    <div class="col-md-10">
                                      <div class="progress" style="height: 6px; border-radius: 16px">
                                        <div class="progress-bar" role="progressbar" style="
                                                        width: 5%;
                                                        border-radius: 16px;
                                                        background-color: #a8729a;
                                                      " aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                                      </div>
                                      <div class="d-flex justify-content-around mb-1">
                                        <p class="text-muted mt-1 mb-0 small ms-xl-5">
                                          Out for delivary
                                        </p>
                                        <p class="text-muted mt-1 mb-0 small ms-xl-5">
                                          Delivered
                                        </p>
                                      </div>
                                    </div>
                                  </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </section>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
















