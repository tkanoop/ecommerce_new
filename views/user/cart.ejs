</head>





<%-include('include/_header')%>

    <!-- Header part end-->


    <!--================Home Banner Area =================-->
    <!-- breadcrumb start-->
    <section class="breadcrumb breadcrumb_bg">
        <div class="container">
            <div class="row justify-content-start">
                <div class="col-lg-8">
                    <div class="breadcrumb_iner">
                        <div class="breadcrumb_iner_item">
                            <h2>Your Cart</h2>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <% if(count===0){ %>
      <center class="col-xl-12 col-md-6 col-sm-4 pt-5">
        <h1 style="color: rgb(56, 232, 241)">Sorry your Cart is empty</h1>
        <img class="image-fluid col-xl-12 col-md-6 col-sm-4 mt-5"
          src="https://alphapharmaexhibitions.com/images/cartempty1.png" alt="" style="width: 14rem" /><br />
        <a class="btn btn-succes" href="/" style="margin-top: 17px; color: green; border: solid green">SHOP NOW</a>
      </center>
      <% }else{ %>
  <!-- breadcrumb start-->

  <!--================Cart Area =================-->
  <section class="cart_area padding_top">
    <div class="container" id="reload">
      <div class="cart_inner">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Product</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">Action</th>
                <th scope="col">Total</th>
              </tr>
            </thead>
            <tbody>
              <% cartlist.forEach(function(product){ %>

                <tr>
                  <td>
                    <div class="media">
                      <div class="d-flex">
                        <img src="/products/<%=product.productDetail.image[0].filename%>" alt="" width="100px" height="auto" />
                      </div>
                      <div class="media-body">
                        <p>
                          <%= product.productDetail.name %>
                        </p>
                      </div>
                    </div>
                  </td>
                  <td>
                    <h5>
                      â‚¹ <%= product.productDetail.price %>
                    </h5>
                  </td>
                  <td>
                    <div class="product_count d-flex align-items-center">
                      <div class="d-flex">
                        <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                          <% if(product.productQuantity==1) {%>
                            <button class="btn btn-link px-2 disabled "
                              onclick="changeQuantity('<%= product._id %>','<%= product.productDetail._id %>',-1)">
                              <% } else { %>
                                <button class="btn btn-link px-2  "
                                  onclick="changeQuantity('<%= product._id %>','<%= product.productDetail._id %>',-1)">
                                  <% } %>
                                    <i class="fas fa-minus"></i>
                                </button>

                                <input id="<%= product.productDetail._id %>" min="0" name="quantity"
                                  value="<%= product.productQuantity %>" type="text"
                                  class="form-control form-control-sm text-center" />

                                <button class="btn btn-link px-2"
                                  onclick="changeQuantity('<%= product._id %>','<%= product.productDetail._id %>',1)">
                                  <i class="fas fa-plus"></i>
                                </button>
                        </div>
                      </div>
                    </div>


                  </td>
                  <td>

                    <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                      <button class="btn btn-outline-none"
                        onclick="removeProduct('<%= product._id %>','<%= product.productDetail._id %>')">
                        <i class="fas fa-trash fa-lg"></i>
                    </div>





                  </td>
                  <td>
                    <p>
                      <%= product.productQuantity %> * <%= product.productDetail.price %>
                    </p>
                  </td>
                  <% }) %>
                </tr>
        </div>
        <!-- <tr class="bottom_button">
                  <td>
                    <a class="btn_1" href="#">Update Cart</a>
                  </td>
                  <td></td>
                  <td></td>
                  <td>
                    <div class="cupon_text float-right">
                      <a class="btn_1" href="#">Close Coupon</a>
                    </div>
                  </td>
                </tr> -->
        <tr>
          <td></td>
          <td></td>
          <td>
            <h5>Subtotal</h5>
          </td>
          <td>
            <h5>
              <%=subtotal%>
            </h5>
          </td>
        </tr>

        </tbody>
        </table>
        <div class="checkout_btn_inner float-right">
          <a class="btn_1 mb-3" href="/">Continue Shopping</a>
          <a class="btn_1 checkout_btn_1" href="/checkoutPage">Proceed to checkout</a>
        </div>
      </div>
    </div>
  </section>
  <% } %>


  <!--================End Cart Area =================-->

  <!--::footer_part start::-->
  <%-include('include/_footer')%>
